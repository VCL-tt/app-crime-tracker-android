<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.screens.DetalleCrimenFragment"
    android:orientation="vertical">

    <!-- Barra de navegación -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?android:attr/colorPrimary"
        android:elevation="15dp"
        android:gravity="center_vertical"
        app:titleTextColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="lab-10"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <!-- Contenedor con margen para los elementos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <!-- Título del crimen -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:text="Título del crimen" />

        <!-- Campo de texto para ingresar el título del crimen -->
        <EditText
            android:id="@+id/txt_titulo_crimen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escribe el título del crimen"
            android:importantForAccessibility="no"
            android:inputType="text" />

        <!-- Fecha del crimen -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:text="Fecha del crimen" />

        <!-- Botón para seleccionar la fecha del crimen -->
        <Button
            android:id="@+id/btn_detalle_crimen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona la fecha"
            android:enabled="true" />

        <!-- Checkbox para marcar si el crimen está resuelto -->
        <CheckBox
            android:id="@+id/chk_resuelto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crimen resuelto" />

        <!-- Espacio flexible para que los elementos se ajusten -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Botón para guardar el crimen -->
        <Button
            android:id="@+id/btnGuardarCrimen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar Crimen" />
    </LinearLayout>

</LinearLayout>
