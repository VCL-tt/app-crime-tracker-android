<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:elevation="6dp"
    android:radius="12dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:id="@+id/titulo_crimen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TÃ­tulo del crimen"
            android:textSize="18sp"
            android:textColor="@color/darkText"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/fecha_crimen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Jun 2025"
            android:textSize="14sp"
            android:textColor="@color/graySecondary"
            android:layout_marginStart="12dp"
            android:fontFamily="sans-serif" />

        <ImageView
            android:id="@+id/img_no_resuelto"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_not_resolved"
            android:visibility="gone"
            android:layout_marginStart="12dp" />

        <ImageView
            android:id="@+id/img_resuelto"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            android:layout_marginStart="12dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
