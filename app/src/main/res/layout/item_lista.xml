<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:elevation="4dp"
    android:layout_marginTop="8dp"
    android:radius="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titulo_crimen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Título crimen"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/fecha_crimen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginStart="8dp"/>

        <!-- Icono para crímenes no resueltos -->
        <ImageView
            android:id="@+id/img_no_resuelto"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_not_resolved"
            android:visibility="gone"
            android:layout_marginStart="8dp"/>

        <ImageView
            android:id="@+id/img_resuelto"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
